@using BlogSitesi.DAL.Data
@using Microsoft.AspNetCore.Identity
@using MVCBlogSitesiProjesi.Data
 
@inject SignInManager<MVCBlogSitesiPLUser> SignInManager
@inject UserManager<MVCBlogSitesiPLUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
        <li class="nav-item">
            <a id="addPost" class="nav-link text-dark" asp-area="" asp-controller="Articles" asp-action="Index" title="Yazı Ekle">Yazı Ekle  </a>
        </li>

    <li class="nav-item">
        <a id="manage" class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Merhaba @UserManager.GetUserName(User)!</a>
    </li>
    <li class="nav-item">
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button id="logout" type="submit" class="nav-link btn btn-link text-dark border-0">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark" id="register" asp-area="Identity" asp-page="/Account/Register">Kayit Ol</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" id="login" asp-area="Identity" asp-page="/Account/Login">Giriş</a>
    </li>
}
</ul>
