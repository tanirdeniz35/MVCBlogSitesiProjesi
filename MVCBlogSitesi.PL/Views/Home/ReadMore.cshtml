@using BlogSitesi.PL.Models
 
@model  ArticleViewModel 
@{
    ViewBag.PageTitle = Model.Title;
}
<div class="row">

    <!-- Post Content Column -->
    <div class="col-lg-8">

        <!-- Title -->
        <h1 class="mt-4">@Model.Title</h1>

        <!-- Author -->
        <p class="lead">by <span class="badge badge-pill bg-primary text-white">@Html.ActionLink((string)Model.MVCBlogSitesiProjesiUser.NameSurname, (string)Model.MVCBlogSitesiProjesiUser.NameSurname, "author", new { }, new { @class = "text-white" })</span></p>

        <hr>

        <!-- Category/Date/Time -->
        <p>

            <span class="badge badge-pill bg-secondary">@Html.ActionLink((string)Model.Category.Name, (string)Model.Category.Name, "category", new { }, new { @class = "text-white" })</span>
            Posted on <span class="badge badge-pill bg-success text-white">@Model.PublishDate.ToLongDateString() at @Model.PublishDate.ToShortTimeString()</span>
            Okunma sayısı
            <span class="badge badge-pill bg-secondary">@Model.ReadCount</span>
             
        </p>

        <hr>

        <!-- Post Content -->
        @Html.Raw(Model.Content)

        <hr>

        

    </div>

    @Html.Partial("Partials/Sidebar")

</div>